<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="5dp" >

    <TextView
        android:id="@+id/titolo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:minHeight="20dp"
        android:text="Titolo"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/riassunto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/titolo"
        android:text="Testo" />

    <TextView
        android:id="@+id/autorelb"
        style="@style/tinybold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/riassunto"
        android:text="@string/lbautore" />
    <TextView
        android:id="@+id/date"
        style="@style/tinybold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/autorelb"
        android:layout_alignBottom="@+id/autorelb"
        android:layout_alignParentRight="true"
        android:text="date" />
    
    <TextView
        android:id="@+id/autore"
        style="@style/tiny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/autorelb"
        android:layout_alignBottom="@+id/autorelb"
        android:layout_marginLeft="4dp"
        android:layout_toLeftOf="@+id/date"
        android:layout_toRightOf="@+id/autorelb"
        android:text="autore" />


</RelativeLayout>